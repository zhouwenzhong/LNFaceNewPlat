<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cgray"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_wode"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="10dp"
        	android:background="@null"
             >
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_top_back"
                android:contentDescription="@null"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_my"
                android:textColor="@color/c333"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        
        <LinearLayout
	        android:layout_width="84dp"
	        android:layout_height="84dp"
	        android:layout_marginTop="10dp"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:padding="0dp"
	        android:background="@drawable/shape_round_big"
	         >
	        <de.hdodenhof.circleimageview.CircleImageView
				android:id="@+id/iv_head"
		        android:layout_width="75dp"
		        android:layout_height="75dp"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:padding="0dp"
		        android:background="@drawable/photo_2"
		        android:contentDescription="@null"
				app:civ_border_color="@color/white"
				app:civ_border_width="1dp"
		         />
	        
	    </LinearLayout>
	    
    </LinearLayout>

    <View 
        style="@style/view_line_info"
        android:layout_marginTop="12dp"
        />
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="42dp"
	    android:orientation="horizontal"
	    android:background="@color/white"
	    >
	    <TextView 
	        android:layout_width="92dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text="@string/user_nickname"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/c666"
	        android:textSize="15sp"
	        />
	    <TextView 
	        android:id="@+id/tv_nickname"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/c333"
	        android:textSize="15sp"
	        />
	    
	</LinearLayout>
	
	<View 
        style="@style/view_line_margin"
        />
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="42dp"
	    android:orientation="horizontal"
	    android:background="@color/white"
	    >
	    <TextView 
	        android:layout_width="92dp"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:text="@string/user_name"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/c666"
	        android:textSize="15sp"
	        />
	    <TextView 
	        android:id="@+id/tv_phone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/c333"
	        android:textSize="15sp"
	        />
	    
	</LinearLayout>
    
    <View 
        style="@style/view_line_info"
        android:layout_marginBottom="12dp"
        />
    
    <RelativeLayout 
        android:id="@+id/rl_settings"
	    android:layout_width="match_parent"
	    android:layout_height="42dp"
	    android:background="@color/white"
	    >
	    <TextView 
	        android:layout_width="92dp"
	        android:layout_height="wrap_content"
	        android:text="@string/settings"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/c666"
	        android:textSize="15sp"
	        android:layout_centerVertical="true"
	        />
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/icon_list_more"
	        android:contentDescription="@null"
	        />
	    
	</RelativeLayout>
	
    <View 
        style="@style/view_line_info"
        android:layout_marginBottom="12dp"
        />
	
    <TextView 
        android:id="@+id/tv_out"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        android:padding="0dp"
        android:text="@string/logout"
        android:textColor="@color/cblue"
        android:textSize="15sp"
        android:gravity="center"
        />

</LinearLayout>